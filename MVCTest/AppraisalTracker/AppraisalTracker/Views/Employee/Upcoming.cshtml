@model IEnumerable<AppraisalTracker.Models.Employee>

@{
    ViewBag.Title = "Upcoming";
}



<div class="upcoming-appraisal-section py-5">
    <div class="container">
        <h3 class="my-4">Upcoming Appraisals</h3>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmpName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Contact)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Salary)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.JoinDate)
                    </th>
                    <th>Add Appraisal</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() != 0)
                {
                    foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Contact)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Salary)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.JoinDate)
                            </td>
                            <td>
                                @Html.ActionLink("Add", "AddAppraisal", "Employee", new { id = item.ID }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>

                    }
                }
                else
                {
                   <tr class="text-center" >
                       <td colspan="5">
                           No upcoming appraisals...
                       </td>  
                   </tr>
                }

            </tbody>
        </table>

    </div>
</div>